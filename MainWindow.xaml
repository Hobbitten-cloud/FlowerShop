<Window x:Class="FlowerShop.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:FlowerShop"
       xmlns:ViewModels="clr-namespace:FlowerShop.ViewModels"
       xmlns:Views="clr-namespace:FlowerShop.Views"
       mc:Ignorable="d"
       Title="MainWindow" Height="600" Width="1000" WindowStartupLocation="CenterScreen" Background="DarkGreen">
    <Viewbox Stretch="Fill">
        <Border Padding="10">
            <Grid Height="600" Width="1000">
                <Grid.Background>
                    <ImageBrush ImageSource="\models\ressources\LersBlomsterLogo.png" Opacity="0.30"/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Background="#2f3640">
                    <Button Content="Start" FontSize="20" FontFamily="Segoe Print" FontWeight="Bold" 
                        Height="40" Margin="10,20,10,20" Background="DarkGreen" Command="{Binding ForwardToStartCommand}"/>

                    <Button Content="Blomster" FontSize="20" FontFamily="Segoe Print" FontWeight="Bold" 
                        Height="40" Margin="10,0,10,20" Background="DarkGreen" Command="{Binding ForwardToFlowerCommand}"/>

                    <Button Content="Kranser" FontSize="20" FontFamily="Segoe Print" FontWeight="Bold" 
                        Height="40" Margin="10,0,10,20" Background="DarkGreen" Command="{Binding ForwardToWreathCommand}"/>

                    <Button Content="Diverse" FontSize="20" FontFamily="Segoe Print" FontWeight="Bold" 
                        Height="40" Margin="10,0,10,20" Background="DarkGreen" Command="{Binding ForwardToMiscellaneousCommand}"/>

                    <Button Content="Noter" FontSize="20" FontFamily="Segoe Print" FontWeight="Bold" 
                        Height="40" Margin="10,0,10,20" Background="DarkGreen" Command="{Binding ForwardToNoteCommand}"/>
                    
                </StackPanel>

                <ContentControl Content="{Binding CurrentViewModel}" Grid.Column="1" Height="Auto">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type ViewModels:FlowerStorageViewModel}">
                            <Views:FlowerStorageWindow/>
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type ViewModels:FlowerEditViewModel}">
                            <Views:FlowerEditWindow/>
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type ViewModels:FlowerCreateViewModel}">
                            <Views:FlowerCreateWindow/>
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type ViewModels:StartViewModel}">
                            <Views:StartWindow/>
                        </DataTemplate>

                        <Style TargetType="Button">
                            <Style.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Style.Resources>
                        </Style>

                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
        </Border>
    </Viewbox>
</Window>