<UserControl x:Class="FlowerShop.Views.StorageOverviewWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowerShop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="ForestGreen">
    <Grid>
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        
        <!-- Labels -->
        <Label FontSize="20" FontWeight="Bold" Content="Lers Blomster" Grid.Column="1" Grid.Row="1" 
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Buttons -->
        <Button Name="BT_Create" Command="{Binding ForwardToCreateProductCmd}" 
                Grid.Column="2" Grid.Row="1" FontSize="20" FontWeight="Bold" Content="Opret Blomst" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="140"/>

        <Button Name="BT_Edit" Command="{Binding EditProductCmd}" CommandParameter="{Binding}" 
                Grid.Column="3" Grid.Row="1" FontSize="20" FontWeight="Bold" Content="Ændr Blomst" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="140"/>

        <Button Name="BT_Delete" Command="{Binding DeleteProductCmd}" CommandParameter="{Binding}" 
                Grid.Column="6" Grid.Row="1" FontSize="20" FontWeight="Bold" Content="Slet Blomst" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="140"/>

        <!-- Listbox content -->
        <ListView Grid.Row="2" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="3" Name="LB_Product" 
                  ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" SelectionMode="Single" 
                  Background="LightGray" Foreground="Red" FontWeight="Bold">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Navn" Width="Auto" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Antal" Width="Auto" DisplayMemberBinding="{Binding Amount}"/>
                    <GridViewColumn Header="Pris" Width="Auto" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        
        <!-- Image -->
        <Border Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="3" Width="Auto" Height="Auto" 
                BorderBrush="Black" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <Image Name="PictureBox" Source="{Binding ProductImage}" Stretch="Fill" Width="300" Height="250" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
