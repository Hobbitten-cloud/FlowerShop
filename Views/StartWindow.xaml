<UserControl x:Class="FlowerShop.Views.StartWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowerShop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <!-- Labels -->
        <Label FontSize="40" FontWeight="Bold" Content="Lers Blomster" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Buttons -->
        <Button Name="BT_NavigateToFlower" Content="Blomster" Command="{Binding ForwardToFlowerCmd}" 
                Grid.Column="1" Grid.Row="2" FontSize="20" FontWeight="Bold" Height="40" Width="140"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <Button Name="BT_NavigateToWreath" Content="Kranser" Command="{Binding ForwardToWreathCmd}" 
                Grid.Column="1" Grid.Row="3" FontSize="20" FontWeight="Bold" Height="40" Width="140"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <Button Name="BT_NavigateToMiscellaneous" Content="Diverse" Command="{Binding ForwardToMiscellaneousCmd}" 
                Grid.Column="1" Grid.Row="4" FontSize="20" FontWeight="Bold" Height="40" Width="140"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <Button Name="BT_NavigateToNote" Content="Noter" Command="{Binding ForwardToNoteCmd}" 
                Grid.Column="1" Grid.Row="5" FontSize="20" FontWeight="Bold" Height="40" Width="140"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>